@model IEnumerable<ApplicationRole>
@inject SignInManager<ApplicationUser> _signinmanager

@{
    ViewData["Title"] = "roles";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<br />
<br />
<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Role Management</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Manage Roles</a></li>

                        <li class="breadcrumb-item active">Roles</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>



    <section class="content">
        <div class="container-fluid">

            <div class="row">
               
                
                    <a asp-controller="RoleManagement" asp-action="Create" class="btn btn-primary">Create New Role</a>
                

                <table class="table table-hover table-striped table-bordered text-center">
                    <thead class="thead-dark">
                        <tr>
                            @* <th>
                            @SharedLocalizer["ID"]
                            </th> *@
                            <th>
                                Role Name
                            </th>
                            <th>Is Active</th>
                            <th>Creeated On</th>
                            <th>Actions</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @*  <td>
                            @item.Id
                            </td> *@
                                <td>
                                    @item.Name
                                </td>

                                <td>
                                    @item.IsActive
                                </td>

                                <td>
                                    @item.CreatedOn
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Actions</button>
                                        <div class="dropdown-menu">
                                           @*  <a asp-controller="RoleManagement" asp-action="Update" asp-route-id="@item.Id" class="dropdown-item">Update</a>
                                            <a asp-controller="RoleManagement" asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item">Delete</a>
                                            <a asp-controller="RoleManagement" asp-action="Details" asp-route-id="@item.Id" class="dropdown-item">Details</a> *@
                                            <a asp-controller="RoleManagement" asp-action="AddOrRemoveUser" asp-route-RoleId="@item.Id" class="dropdown-item">ِAddOrRemove</a>


                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>


    </section>
</div>


