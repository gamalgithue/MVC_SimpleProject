@model DepartmentDTO
@{
    ViewBag.Title = "Create";
}


<br />
<br />
<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Department</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Department Card</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>


    @*  <section class="content">
    <div class="container-fluid">

    <div class="row"> *@

    <form method="post" class="form-group" asp-action="Create" asp-controller="Department">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">New Department</h2>
                <hr />
            </div>
            <div asp-validation-summary="All" class="text-danger">

            </div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Your Name" />
                <span asp-validation-for="Name" class="text-danger"></span>


            </div>
            <div class="mb-3">
                <label asp-for="Code"></label>
                <input asp-for="Code" class="form-control" placeholder="Enter Your Code" />
                <span asp-validation-for="Code" class="text-danger"></span>




            </div>
            <div class="mb-3">
                <label asp-for="NoOfEmp"></label>
                <input asp-for="NoOfEmp" class="form-control" placeholder="Enter Your NoOfEmployees" />
                <span asp-validation-for="NoOfEmp" class="text-danger"></span>




            </div>



            <br />
            <input type="submit" class="btn btn-primary" value="Save" />

            <a asp-controller="Department" asp-action="Index" class="btn btn-danger" style="width=150px;"> Back To items</a>



        </div>

    </form>
    @*  </div>
    </div>

    </section> *@


</div>

@section JqueryValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
