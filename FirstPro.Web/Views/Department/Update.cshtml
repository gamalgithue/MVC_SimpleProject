@model DepartmentDTO

@{
    ViewBag.Title = "Update";
}

<br />
<br />
<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Dashboard</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Department</a></li>
                        <li class="breadcrumb-item active">Update</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>


    @*  <section class="content">
    <div class="container-fluid">

    <div class="row"> *@

    <form method="post" asp-action="Update" asp-controller="Department">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Update @Model.Name Department</h2>
                <hr />
            </div>
            <div asp-validation-summary="All" class="text-danger">

            </div>
            <input type="hidden" asp-for="Id" />
           
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"  />
                <span asp-validation-for="Name" class="text-danger"></span>




            </div>
            <div class="mb-3">
                <label asp-for="Code"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>




            </div>
            <div class="mb-3">
                <label asp-for="NoOfEmp"></label>
                <input asp-for="NoOfEmp" class="form-control" />
                <span asp-validation-for="NoOfEmp" class="text-danger"></span>




            </div>



            <br />
            <center>
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" style="width=150px"> Delete</a>

            <a asp-controller="Department" asp-action="Index" class="btn btn-secondary" style="width=150px"> Back To items</a>
            </center>


        </div>

    </form>
    @*  </div>
    </div>

    </section> *@


</div>
@section JqueryValidation {
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}





